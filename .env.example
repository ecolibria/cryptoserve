# Environment (development, staging, production)
ENVIRONMENT=development

# GitHub OAuth (optional in dev mode)
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Security keys (MUST generate unique values for production)
# Generate with: openssl rand -hex 32
CRYPTOSERVE_MASTER_KEY=dev-master-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# HKDF salt for key derivation (MUST be unique per deployment)
# Generate with: openssl rand -hex 16
HKDF_SALT=cryptoserve-v1-change-in-production

# OAuth CSRF protection secret
# Generate with: openssl rand -hex 16
OAUTH_STATE_SECRET=oauth-state-secret-change-in-production

# Cookie security (set to true for HTTPS deployments)
COOKIE_SECURE=false

# URLs
FRONTEND_URL=http://localhost:3003
BACKEND_URL=http://localhost:8003

# Dev mode (bypasses OAuth for testing - MUST be false in production)
DEV_MODE=true

# Database
DATABASE_URL=postgresql+asyncpg://cryptoserve:localdev@localhost:5432/cryptoserve

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_CRYPTO_OPS=500
